<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/txtTweetSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="#sender"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="this is a tweet"
        android:layout_below="@+id/txtTweetSender"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtTweetDate" />

    <TextView
        android:id="@+id/txtTweetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22s"
        android:layout_marginRight="2dp"
        android:layout_alignBaseline="@+id/txtTweetSender"
        android:layout_alignBottom="@+id/txtTweetSender"
        android:layout_toStartOf="@+id/imgTweetIcon" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgTweetIcon" />
</RelativeLayout>